<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.plainolnotes.EditorActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:gravity="top"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/enter_note_here"
        android:inputType="textMultiLine|textCapSentences"/>

    <Button
        android:id="@+id/fromCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add from Camera"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageView1"
        android:layout_alignRight="@+id/imageView1"
        android:layout_alignEnd="@+id/imageView1">

    </Button>
    <!--<Button-->
        <!--android:id="@+id/fromGallery"-->

        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Add from Gallery"-->
        <!--android:layout_below="@+id/fromCamera"-->
        <!--android:layout_alignRight="@+id/fromCamera"-->
        <!--android:layout_alignEnd="@+id/fromCamera">-->

    <!--</Button>-->
    <ImageView android:id="@+id/imageView1"
        android:layout_height="150dp"
        android:src="@drawable/person"
        android:layout_width="150dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true">

    </ImageView>


</RelativeLayout>
